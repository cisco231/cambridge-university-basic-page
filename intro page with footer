* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body, html {
    height: 100%;
    font-family: Arial, sans-serif;
}

header {
    position: relative;
    height: 100vh;
    overflow: hidden;
}

nav {
    position: absolute;
    top: 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: rgba(255, 255, 255, 0.1); /* transparent background */
    z-index: 10;
    backdrop-filter: blur(10px);
    padding: 20px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    animation: slideIn 1s ease-out;
}

@keyframes slideIn {
    from {
        top: -100px;
    }
    to {
        top: 0;
    }
}

nav .logo {
    height: auto; /* Adjust as needed for logo size */
    max-width: 200px; /* Set maximum width */
    transition: transform 0.3s;
}

nav .logo:hover {
    animation: pulse 1s infinite;
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.1);
    }
}

nav .nav-center {
    flex-grow: 1;
    display: flex;
    justify-content: center;
}

